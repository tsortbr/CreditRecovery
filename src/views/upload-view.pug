extends layout

block content
    .p-5
        h1 Carregar Notas
        .row
            .col-md-6.col-sm-12
                .custom-file.mt-5
                    form(action="/upload" method="post" enctype="multipart/form-data" required)#formFiles
                        input.custom-file-input(type="file" accept="text/xml" multiple name='notes')#inputFiles
                        label.custom-file-label(for="inputFiles") Choose file
                .div.py-3
                    .row
                        .col.text-right
                            button.btn.btn-lg.btn-primary.disabled.mr-3(type="button")#btnSend Enviar
                            button.btn.btn-lg.btn-secondary.disabled(type="button")#btnClean Limpar
            .col-md-6.col-sm-12
                .card.text-dark.mt-5
                    .card-header.p-1
                        span Files
                    .card-body.p-1
                        .div#divFilesList
                            p.text-center.text-secondary.my-5 NO FILES
                    //- .card-footer.p-1                    
    //-View-Controller
    script(src="/js/upload-script.js")